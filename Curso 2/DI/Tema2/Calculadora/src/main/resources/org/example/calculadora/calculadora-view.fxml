<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.calculadora.CalcController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TextField fx:id="textFieldOperaciones" editable="false" prefHeight="50" prefWidth="54.0" style="-fx-font-size:18px;" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0" />

    <!-- Primera fila: operaciones especiales -->
    <Button onAction="#handleButtonClick" text="C" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button onAction="#handleButtonClick" text="←" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button onAction="#handleButtonClick" text="±" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button onAction="#handleButtonClick" text="/" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <!-- Segunda fila -->
    <Button onAction="#handleButtonClick" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button onAction="#handleButtonClick" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#handleButtonClick" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#handleButtonClick" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" />

    <!-- Tercera fila -->
    <Button onAction="#handleButtonClick" text="4" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button onAction="#handleButtonClick" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button onAction="#handleButtonClick" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button onAction="#handleButtonClick" text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" />

    <!-- Cuarta fila -->
    <Button onAction="#handleButtonClick" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button onAction="#handleButtonClick" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#handleButtonClick" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button onAction="#handleButtonClick" text="+" GridPane.columnIndex="3" GridPane.rowIndex="4" />

    <!-- Quinta fila -->
    <Button onAction="#handleButtonClick" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
    <Button onAction="#handleButtonClick" text="." GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Button onAction="#handleButtonClick" text="=" GridPane.columnIndex="3" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
