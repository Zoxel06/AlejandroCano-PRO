<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imagenFila"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/rodri_paloma"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Perdón Miriam Perdón"
            app:layout_constraintBottom_toBottomOf="@+id/imagenFila"
            app:layout_constraintEnd_toEndOf="@+id/imagenFila"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textoDescripcion"
            android:text="Palomaman es un ser que vive por y para cagar. Se caracteriza por pedir disculpas constantemente. Nunca le pidas llegar a tiempo a un sitio, nunca lo hará dada su condición de cagón. A menudo se le compara con Gibaja, pero no deberían ser comparados, si no disfrutados a la par junto con Manuel"
            android:textSize="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenFila" />

        <Button
            android:id="@+id/botonDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver detalles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoDescripcion" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Echarle del grupo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoDescripcion" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>